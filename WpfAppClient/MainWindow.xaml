<Window x:Class="WpfAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClient"
        mc:Ignorable="d"
        Title="Client" Height="315.714" Width="589.357">
    <Grid>
        <StackPanel>
            <Label Content="Email" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" />
            <TextBox x:Name="Email" Text="xx@xx.xx" HorizontalContentAlignment="Center" FontSize="20"/>
            <Label Content="Password" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center"  />
            <PasswordBox x:Name="Password" Password="Xx12345678" HorizontalContentAlignment="Center" FontSize="20"/>
            <Button Content="Enter" FontSize="25" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="70,20" Click="Enter_Click"  />
            <Button Content="Registration"  FontSize="15" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="100,10" Click="Registration_Click"  />
        </StackPanel>
    </Grid>
</Window>
