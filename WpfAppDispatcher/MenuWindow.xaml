<Window x:Class="WpfAppDispatcher.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDispatcher"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu FontSize="15" FontWeight="Bold">
            <MenuItem Header="Drivers">
                <MenuItem Header="Create driver" Click="CreateDriver_Click"/>
                <MenuItem Header="All drivers" Click="AllDrivers_Click"/>
            </MenuItem>
            <MenuItem Header="Orders and reports" >
                <MenuItem Header="All orders" Click="AllOrders_Click"/>
                <MenuItem Header="All reports" Click="AllReports_Click" />
            </MenuItem>
            <MenuItem Header="Clients">
                <MenuItem Header="All clients" Click="AllClients_Click" />
            </MenuItem>
            <MenuItem Header="Create car" Click="CreateCar_Click"/>
            <MenuItem Header="Change info" Click="ChangeInfo_Click" />
            <MenuItem Header="Log out" Click="LogOut_Click"/>
        </Menu>
    </Grid>
</Window>
