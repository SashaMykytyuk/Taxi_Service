<Window x:Class="WpfAppClient.WriteEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClient"
        mc:Ignorable="d"
        Title="WriteEmailWindow" Height="369.328" Width="650.42">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Theme: " FontSize="15" FontWeight="Medium"/>
            <TextBox x:Name="Theme" FontSize="15" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Message: " FontSize="15" FontWeight="Medium" />
            <TextBox x:Name="Message" FontSize="15" AutoWordSelection="True" TextWrapping="Wrap" />
        </StackPanel>
        <Button Content="Send message" Grid.Row="2" Margin="100,15" FontSize="20" FontWeight="Black" FontStyle="Italic" Click="Button_Click"/>
    </Grid>
</Window>
