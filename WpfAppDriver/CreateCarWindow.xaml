<Window x:Class="WpfAppDriver.CreateCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDriver"
        mc:Ignorable="d"
        Title="CreateCarWindow" Height="332.773" Width="361.765">
    <Grid>
        <StackPanel>
            <Label Content="Class of car: " FontSize="15" FontWeight="Medium" />
            <TextBox x:Name="ClassOfCar" FontSize="15" />
            <Label Content="Marka: "  FontSize="15" FontWeight="Medium"/>
            <TextBox x:Name="Marka" FontSize="15"/>
            <Label Content="Volume: " FontSize="15" FontWeight="Medium"/>
            <TextBox x:Name="Volume" FontSize="15"/>
            <Label Content="Age: " FontSize="15" FontWeight="Medium" />
            <TextBox  x:Name="Age" FontSize="15"/>
            <Button Margin="15" Content="Create car" FontSize="20" FontWeight="Black" FontStyle="Italic" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
