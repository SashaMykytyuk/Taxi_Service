<Window x:Class="WpfAppClient.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClient"
        mc:Ignorable="d"
        Title="CreateOrderWindow" Height="389.748" Width="690.757">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="From: " FontSize="18" FontWeight="Medium" />
            <TextBox x:Name="From"  FontSize="18"  />
            <Label Content="To"  FontSize="18" FontWeight="Medium" />
            <TextBox x:Name="To" FontSize="18" />
            <Label Content="KM: " Margin="0,20,0,0" FontSize="18" FontWeight="Medium" />
            <TextBox IsEnabled="False" x:Name="KM" FontSize="18" />
            <Label Content="Price" FontSize="18" FontWeight="Medium"  />
            <TextBox IsEnabled="False" x:Name="Price" FontSize="18" />

            <Button Content="Create order" Margin="15"  FontSize="20" FontWeight="Bold" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
