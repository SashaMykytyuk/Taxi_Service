<Window x:Class="WpfAppClient.RegistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClient"
        mc:Ignorable="d"
        Title="RegistWindow" Height="398.823" Width="476.471">
    <Grid>
        <StackPanel>
            <Label Content="Email: " FontSize="20" FontWeight="Black"/>
            <TextBox x:Name="Email" FontSize="15" FontWeight="Light"/>
            <Label Content="First Name: "  FontSize="20" FontWeight="Black"/>
            <TextBox x:Name="FirstName" FontSize="15" FontWeight="Light" />
            <Label Content="Second Name: "  FontSize="20" FontWeight="Black"/>
            <TextBox x:Name="SecondName" FontSize="15" FontWeight="Light"/>
            <Label Content="Password: "  FontSize="20" FontWeight="Black" />
            <PasswordBox x:Name="Password" FontSize="15" FontWeight="Light"/>
            <Button Content="Save" Margin="70,30" FontSize="30" FontWeight="Bold" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
