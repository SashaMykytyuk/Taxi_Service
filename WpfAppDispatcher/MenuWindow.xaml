<Window x:Class="WpfAppDispatcher.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDispatcher"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu FontSize="15" FontWeight="Bold">
            <MenuItem Header="Drivers">
                <MenuItem Header="Create driver" />
                <MenuItem Header="All drivers" />
            </MenuItem>
            <MenuItem Header="Orders and reports" >
                <MenuItem Header="All orders" />
                <MenuItem Header="All reports" />
            </MenuItem>
            <MenuItem Header="Clients">
                <MenuItem Header="All clients" />
            </MenuItem>
            <MenuItem Header="Create car" />
            <MenuItem Header="Change info" />
            <MenuItem Header="Log out"/>
        </Menu>
    </Grid>
</Window>
